<div class="vote">
	<div class="header">
		{{#if yesVote}}
			<img src="/img/glyphicons_198_ok.png"> You have voted for this proposal!
		{{/if}}	
	</div>
	<div class="actions">
		{{#if user}}
			{{#if ../yesVote}}
				<button data-action="unvote">
					<img src="/img/Twitter_logo_blue.png" class="twitterLogo" alt="Twitter Logo">
					Un-vote
				</button>
			{{else}}
				{{#if user.outOfVotes}}
					<button disabled>
						<img src="/img/Twitter_logo_white.png" class="twitterLogo" alt="Twitter Logo">
						You are out of votes!
					</button>
				{{else}}
					<button data-action="vote">
						<img src="/img/Twitter_logo_blue.png" class="twitterLogo" alt="Twitter Logo">
						Vote for this proposal!
					</button>
				{{/if}}
			{{/if}}
			<button data-action="logout">
				<img src="/img/Twitter_logo_blue.png" class="twitterLogo" alt="Twitter Logo">
				Logout
			</button>
		{{else}}
			<button data-action="login">
				<img src="/img/Twitter_logo_blue.png" class="twitterLogo" alt="Twitter Logo">
				Login to vote!
			</button>
		{{/if}}
	</div>
	{{#if user}}
		<div class="status">
			You have {{user.votesRemaining}} of {{user.votesAvailable}} votes left.
		</div>
	{{/if}}
</div>
